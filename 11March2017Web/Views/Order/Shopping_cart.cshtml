@model IEnumerable<_11March2017Web.Models.Cart>

@{
    ViewBag.Title = "Shopping cart";
}

<div class="container">
    <div class="col-md-12">
        <br/><br />
        <h2>Shopping Cart</h2>

        <br />
        <table class="table">
            <tr>
                <th>Product Image</th>
                <th>Product Name</th>
                <th>Unit Price</th>
                <th>Quantity</th>
                <th>Total Price</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td><img src='@Url.Content(item.productThumbnailPath)' style="height:50px;width:50px;" /></td>
                    <td>@item.productName</td>
                    <td>@item.productUnitPrice</td>
                    <td>@item.productQty</td>
                    <td>@item.productTotalPrice</td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }
        </table>
    </div>

    <div class="col-md-12">
        <div class="col-sm-6">

        </div>
        <div class="col-sm-6">
            <h3>Total</h3>
            <h4>RS. @ViewBag.Total_amount /-</h4>
        </div>
    </div>

    <br/><br />
    <div class="col-md-12">
        <div class="col-sm-6">
            
        </div>
        <div class="col-sm-2">
            @Html.ActionLink("Continue Shopping", "Products", "Product", new { area = "" }, new { @class = "btn btn-primary" })
        </div>
        @if (Model.Count() != 0)
        {
            <div class="col-sm-2">
                @Html.ActionLink("Clear Cart", "Clear_cart", "Order", new { area = "" }, new { @class = "btn btn-danger" })
            </div>
            <div class="col-sm-2">
                @Html.ActionLink("CheckOut", "Checkout", "Order", new { area = "" }, new { @class = "btn btn-success" })
            </div>
        }
    </div>
   
</div>
